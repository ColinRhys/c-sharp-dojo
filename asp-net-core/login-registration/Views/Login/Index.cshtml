@model login_registration.Models.Login

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <form asp-controller="Login" asp-action="Login" method="post">
            <div class="form-group">
              <label>Email</label><br>
              <input class="form-control" asp-for="Email"/>
              <span class="form-text text-muted" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
              <label>Password</label><br>
              <input class="form-control" asp-for="Password"/>
              <span class="form-text text-muted" asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>