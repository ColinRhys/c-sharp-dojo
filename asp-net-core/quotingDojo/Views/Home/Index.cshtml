@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row text-center justify-content-center">
        <div class="col">
            <h1>Welcome to Quoting Dojo</h1>
            <form action="quotes" method="POST" style="width: 40%; margin: 0 auto">
                <div class="form-group">
                    <label for="author">Name</label>
                    <input type="text" class="form-control" id="author" required>
                </div>
                <div class="form-group">
                    <label for="quote">Quote</label>
                    <textarea class="form-control" rows="3" id="quote" required></textarea>
                </div>
                <input value="Add Quote" type="submit" class="btn btn-success">
            </form>
            <form action="quotes" method="GET"><button class="btn btn-primary">Skip to Quotes</button></form>
        </div>
    </div>
</div>