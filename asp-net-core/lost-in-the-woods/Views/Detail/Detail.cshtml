<div class="container">
  <div class="row">
    <div class="col">
      <a href="/" class="nav-link float-right">Home</a>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="card">
        <div class="card-header">@ViewBag.Trail.TrailName</div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Description</b> @ViewBag.Trail.Description</li>
            <li class="list-group-item"><b>Trail Length</b> @ViewBag.Trail.TrailLength Miles</li>
            <li class="list-group-item"><b>Elevation Change</b> @ViewBag.Trail.Elevation Feet</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>